#!/bin/bash

NAME="ElPaso_app"                                 # Name of the application
DJANGODIR=/var/www/elpaso/                        # Django project directory
SOCKFILE=/var/www/elpaso/run/gunicorn.sock        # we will communicte using this unix socket
USER=geotribu                                      # the user to run as
GROUP=geotribu                                     # the group to run as
NUM_WORKERS=3                                     # how many worker processes should Gunicorn spawn
DJANGO_SETTINGS_MODULE=elpaso.settings            # which settings file should Django use
DJANGO_WSGI_MODULE=elpaso.wsgi			  # WSGI module name

echo "Starting $NAME as `whoami`"

# Activate the virtual env
cd $DJANGODIR
source /var/www/elpaso/virtenv/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your Django Unicorn
exec /var/www/elpaso/virtenv/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $NUM_WORKERS \
  --user=$USER \
  --timeout 60 \
  --graceful-timeout 30 \
  --log-level=debug \
  --log-file=/var/www/elpaso/logs/gunicorn.log \
#  --bind=unix:$SOCKFILE
  # --bind=163.172.42.190:8443
  --bind=elpaso.georezo.net:8000
