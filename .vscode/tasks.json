{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run - RSS to DB",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "manage.py",
                "rss2db"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Run - Map builder",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "manage.py",
                "map_builder"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Format code",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "black",
                "--target-version=py37",
                "./elgeopaso"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Format tests",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "black",
                "--target-version=py37",
                "./tests"
            ],
            "group": "build",
            "problemMatcher": []
        },
    ]
}